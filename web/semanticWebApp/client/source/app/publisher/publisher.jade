.phone-main-view.full-width
    .card(class="mt+")
        table.data-table
            thead
                tr.heading
                    th Name
                    th.hide-sm Papers Published
                    th.text-center Action
                tr
                    td.divider.divider--dark(colspan="4")
            tbody
                tr.empty-row(ng-if="vm.publisher.length === 0")
                    td(colspan="4") No Publishers found!
                tr.data-table__clickable-row.phone-item(ng-repeat="publisher in vm.publishers")
                    td
                        span {{::publisher.name}}
                    td.hide-sm
                        span {{::publisher.documentCount}}
                    td.text-center
                        a.btn.btn--m.btn--blue.btn--fab(
                            ui-sref="root.paper.detail({id: publisher.id})",
                            lx-ripple, lx-tooltip="View publisher Info"
                        )
                            i.mdi.mdi-information

